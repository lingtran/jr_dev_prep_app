<p>
  Editing question: <%= @question.title %>
</p>

<div class="edit_question_box">
  <%= form_for(@question, url: admin_question_path) do |f| %>
    <%= f.label :title %> <br>
    <%= f.text_area :title %> <br>
    <br>
    <%= f.label :category %><br>
    <%= f.text_area :category %> <br>
    <br>
    <%= f.submit "Save" %>
  <% end %>
</div>
