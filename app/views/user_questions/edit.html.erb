<p>
  Question: <%= @user_question.question.title %>
</p>

<div class="edit_comment_box">

  <%= form_for(@user_question) do |f| %>
    <%= f.label :comments, "Change notes to self" %> <br>
    <%= f.text_area :comments, class:"comment_text" %> <br>
    <%= f.hidden_field :question_id, :value => @user_question.question.id %>
    <%= f.submit "Save" %>
  <% end %>
</div>
